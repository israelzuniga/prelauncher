%title Invictus Próximamente
%meta{:content => "Invictus Próximamente", :name => "Description"}/
%meta{:content => "Invictus, proveedor, idea, luz, energía,", :name => "Keywords"}/

%link{:href => asset_path('favicon.ico'), :rel => "shortcut icon", :type => "image/x-icon"}/
%link{:href => asset_path('favicon.ico'), :rel => "apple-touch-icon", :type => "image/jpeg"}/

// Facebook
%meta{:content => "#{Setting.sharing[:facebook_title]}", :property => "og:title"}/
%meta{:content => "#{Setting.sharing[:facebook_message]}", :property => "og:description"}/
%meta{:content => "722805517820060", :property => "fb:app_id"}/
%meta{:content => "http://invictus.mx/system/settings/facebook_images/000/000/001/original/facebook_share.jpg", :property => "og:image"}/
%meta{:content => "570", :property => "og:image:width"}/
%meta{:content => "300", :property => "og:image:height"}/

- if controller_name != "users"
	%meta{:content => (params[:ref] ? root_url + "users/" + params[:ref] : root_url), :property => "og:url"}/

- else
	%meta{:content => request.original_url, :property => "og:url"}/

%meta{:content => "summary_large_image", :name => "twitter:card"}/
%meta{:content => "@invictusmx", :name => "twitter:site"}/
%meta{:content => "Invictus Próximamente", :name => "twitter:title"}/
%meta{:content => Setting.sharing["twitter_message"], :name => "twitter:description"}/
%meta{:content => root_url, :name => "twitter:domain"}/
%meta{:content => root_url + Setting.twitter_image.url, :name => "twitter:image"}/

// more meta
%meta{:content => "article", :property => "og:type"}/
%meta{:content => "Invictus Próximamente", :property => "og:site_name"}/

%meta{name: "viewport", content: "width=device-width, initial-scale=1.0, maximum-scale=1.0"}
